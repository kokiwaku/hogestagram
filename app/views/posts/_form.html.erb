<%= form_for(@post) do |f| %>

<% if @post.errors.any? %>
  <div id="error_explanation">
    <ul>
    <% @post.errors.full_messages.each do |msg| %>
      <li><%= msg %></li>
    <% end %>
    </ul>
  </div>
<% end %>

  <%= f.label :content %>
  <%= f.text_field :content %>
  <br>
  <%= f.label :post_image %>
  <%= f.file_field :post_image %>
  <br>
  <%= f.submit %>

<% end %>

<%= link_to "一覧へ戻る", posts_path  %>
