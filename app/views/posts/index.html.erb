<p><%= notice %></p>

<div class = "container">
    <div class = "wrapper col-md-4 col-md-offset-4 col-sm-10" >
      <div class = "post_body">
       <% @posts.each do |post| %>
          <div class = "post_user">
            <p><%= post.user.name %></p>
            <%= profile_img(post.user) if profile_img(post.user) %>
          </div>
          <div style = "width:100%; ">
            <p><img src = "<%= post.post_image.to_s %>", class="img-responsive　center-block""></p>
              <p><%= post.content %></p>
          </div>
          <div class = "post_btn">
              <%= link_to "編集", edit_post_path(post.id), class: 'btn btn-default btn-sm btn-success' %>
              <%= link_to "削除", post_path(post.id), method: :delete, data:{confirm: '本当に削除していいですか？'}, class: 'btn btn-default btn-sm btn btn-danger'  %>
          </div>
        <% end %>
      </div>
    </div>
</div>
